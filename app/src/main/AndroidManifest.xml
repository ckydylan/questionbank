<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.questionbank">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5935776729140254~2945230918"/>
        <activity android:name=".activity.LaunchViewActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" android:launchMode="singleTop"/>
        <activity android:name=".activity.QuestionRoundActivity" android:launchMode="singleTop"/>
        <activity android:name=".activity.DoQuestionActivity" android:launchMode="singleTop"/>
        <activity android:name=".activity.WrongQuestionCollectionActivity" android:launchMode="singleTop"/>
        <activity android:name=".activity.WrongQuestionDetailActivity" android:launchMode="singleTop"/>
        <activity android:name=".activity.ProficiencyQuestionActivity" android:launchMode="singleTop"/>
        <activity android:name=".activity.DataStatisticalActivity" android:launchMode="singleTop"/>
    </application>

</manifest>